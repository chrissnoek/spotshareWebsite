{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "mongoose",
      "settings": {
        "client": "mongo",
        "uri": "${process.env.MONGODB_URI}"
      },
      "options": {
        "authenticationDatabase": "${process.env.DATABASE_AUTHENTICATION_DATABASE}",
        "ssl": "${process.env.DATABASE_SSL}"
      }
    }
  }
}
